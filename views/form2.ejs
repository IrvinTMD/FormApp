<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= form.customerName %>'s Submission</div>
        <form class="ui form" action="/form2/<%= form._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Is your spouse travelling with you?</label>
                <input type="radio" name="form[withSpouse]" value="true">Yes<br>
                <input type="radio" name="form[withSpouse]" value="false" checked>No<br>
            </div>
            <div class="field">
                <label>Spouse Name</label>
                <input type="text" name="form[spouseName]" placeholder="Spouse's Name..">
            </div>
            <div class="field">
                <label>Number of Children Travelling</label>
                <input type="number" name="form[numChildren]" placeholder="0" min="0" max="40" value="0" required>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
</div>


<% include partials/footer %>
