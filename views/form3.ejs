<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= form.customerName %>'s Submission</div>
        <form class="ui form" action="/form3/<%= form._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Travelling From?</label>
                <input type="text" name="form[locationFrom]" placeholder="Singapore" required>
            </div>
            <div class="field">
                <label>Travelling To?</label>
                <input type="text" name="form[locationTo]" placeholder="Japan" required>
            </div>
            <div class="field">
                <label>Travel Date</label>
                <input type="date" name="form[dateTravel]" placeholder="YYYY-MM-DD" required>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
</div>


<% include partials/footer %>
